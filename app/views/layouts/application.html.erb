<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>

  	<div class='body'>
      <div class='container'>
        <% if user_signed_in? %>
          <%= form_with url: search_path, local:true,method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, ["User","Book"] %>
            <%= f.select :search,[["完全一致","perfect_match"],["前方一致","forward_match"],
            ["後方一致","behind_match"],["部分一致","partial_match"]] %>
            <%= f.submit "検索" %>
          <% end %>
        <% end %>
        
        <p id="notice"><%= notice %></p>
      
      	<%= yield %>
      </div>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
